package assignment13;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class Assignment13GradingTests {

	NetworkGraph path;
	@Before
	public void setUp() throws Exception {
		path = new NetworkGraph("flights-2015-q3.csv");
	}
	

	@Test
	public void test() {
		BestPath bestPath = path.getBestPath("MOB", "ACV", FlightCriteria.DISTANCE);
		System.out.println(bestPath.toString());
		String[] thePathToArray = breakUpPath(bestPath);
		for(String element: thePathToArray)
		{
			System.out.println(element);
		}
	}
	
	/**
	 * This method will take in a path as input
	 * and return an array filled with values to 
	 * check for the grader.
	 * @param thePath - the best path
	 * @return an array of Strings. array[0] is the cost, 
	 * array[1] and on is the best path
	 */
	public String[] breakUpPath(BestPath thePath)
	{
		String[] bestPath = thePath.toString().split("\\s+");
		return bestPath;
		
	}

}
